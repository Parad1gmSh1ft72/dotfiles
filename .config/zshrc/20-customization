# CUSTOMIZATION
# -----------------------------------------------------
POSH=blue-owl
# quick-term sonicboom_light sonicboom_dark stelbent.minimal powerlevel10k_lean powerlevel10k_modern

# -----------------------------------------------------
# oh-my-zsh themes: https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
# -----------------------------------------------------
ZSH_THEME=darkblood

# -----------------------------------------------------
# oh-my-zsh plugins
# -----------------------------------------------------
plugins=(
    git
    sudo
    web-search
    archlinux
    aliases
    colored-man-pages
    colorize
    eza
    history
    themes
    docker
    direnv
    zsh-autosuggestions
    fast-syntax-highlighting
    copyfile
    copybuffer
    dirhistory
    zsh-interactive-cd
    zsh-syntax-highlighting
)

# Setting default Ranger RC to false to avoid loading it twice
export RANGER_LOAD_DEFAULT_RC='false'

# Set-up oh-my-zsh
source $ZSH/oh-my-zsh.sh
# ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#330022,bg=red,bold,underline"

# -----------------------------------------------------
# Set-up FZF key bindings (CTRL R for fuzzy history finder)
# -----------------------------------------------------
source <(fzf --zsh)
source /usr/share/fzf/key-bindings.zsh
source /usr/share/fzf/completion.zsh

# zsh history
HISTFILE=~/.zsh_history
HISTSIZE=5000
SAVEHIST=5000
setopt appendhistory

# XDG user dirs
source ~/.config/user-dirs.dirs

eval "$(direnv hook zsh)"

# Added by LM Studio CLI (lms)
export PATH="$PATH:/home/chuck/.lmstudio/bin"

# Start gpg agent:
# gpgconf --launch gpg-agent
# export GPG_TTY=$(tty)

# -----------------------------------------------------
# Prompt
# -----------------------------------------------------
eval "$(oh-my-posh init zsh --config $HOME/.config/ohmyposh/zen.toml)"
eval "$(oh-my-posh init zsh --config $HOME/.config/ohmyposh/EDM115-newline.omp.json)"

